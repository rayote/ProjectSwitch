<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kkook.team.projectswitch" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.kakao.sdk.common.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_project_switch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <activity
            android:name=".FriendListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.kakao.sdk.common.KakaoLoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.kakao.sdk.common.KakaoSignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddFriendActivity" >
        </activity>
        <activity
            android:name=".ManageFriendActivity"
            android:label="@string/title_activity_manage_friend"
            android:parentActivityName=".FriendListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ManageFriendGroupActivity"
            android:parentActivityName=".ManageFriendActivity" >
        </activity>
        <activity android:name=".SettingActivity"
            android:parentActivityName=".FriendListActivity">
        </activity>
    </application>

</manifest>
