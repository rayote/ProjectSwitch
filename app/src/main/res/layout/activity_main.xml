<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/relativeLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/gray"
	android:paddingBottom="10dp"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	android:paddingTop="10dp"
	tools:context=".view.MainActivity">

	<ImageView
		android:id="@+id/bgSwitch"
		android:layout_width="290dp"
		android:layout_height="290dp"
		android:src="@drawable/bg_circle"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true" />


	<RelativeLayout
		android:layout_width="270dp"
		android:layout_height="270dp"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:id="@+id/mainframe">


		<ImageView
			android:id="@+id/imgBtnSideTop"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:src="@drawable/bg_arrowbutton_g"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"/>

		<ImageView
			android:id="@+id/imgBtnSideRight"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:src="@drawable/bg_arrowbutton_g"
			android:rotation="270"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true" />

		<ImageView
			android:id="@+id/imgBtnSideBottom"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:src="@drawable/bg_arrowbutton_g"
			android:rotation="90"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"/>

		<ImageView
			android:id="@+id/imgBtnSideLeft"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:src="@drawable/bg_arrowbutton_g"
			android:rotation="180"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"/>


	</RelativeLayout>


	<RelativeLayout
		android:layout_width="270dp"
		android:layout_height="300dp"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:id="@+id/mainframe2">
	<TextView
		android:id="@+id/tvBtnSideTop"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="15 min."
		android:textColor="@color/lightgray"
		android:textSize="15dp"
		android:textAlignment="center"
		android:textStyle="bold"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"/>

	<TextView
		android:id="@+id/tvBtnSideRight"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="30 min."
		android:textColor="@color/lightgray"
		android:textSize="15dp"
		android:textAlignment="center"
		android:textStyle="bold"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"/>

	<TextView
		android:id="@+id/tvBtnSideBottom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="45 min."
		android:textSize="15dp"
		android:textColor="@color/lightgray"
		android:textAlignment="center"
		android:textStyle="bold"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" />
	<TextView
		android:id="@+id/tvBtnSideLeft"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="60 min."
		android:textColor="@color/lightgray"
		android:textSize="15dp"
		android:textAlignment="center"
		android:textStyle="bold"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"/>

	</RelativeLayout>
	<ImageView
		android:id="@+id/imgBtnSwitch"
		android:layout_width="130dp"
		android:layout_height="130dp"
		android:layout_centerInParent="true"
		android:src="@drawable/btn_switch_white" />

	<ImageButton
		android:layout_width="75dp"
		android:layout_height="75dp"
		android:id="@+id/ibProfile"
		android:src="@drawable/btn_profile"
		android:background="#00000000"
		android:scaleType="fitCenter"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true" />

</RelativeLayout>
