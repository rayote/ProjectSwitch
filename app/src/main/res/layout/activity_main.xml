<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/relativeLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/color3"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="kkook.team.projectswitch.MainActivity">

	<ImageView
		android:id="@+id/bgSwitch"
		android:layout_width="290dp"
		android:layout_height="290dp"
		android:layout_centerInParent="true"
		android:src="@drawable/sidw_switch_bg" />

	<ImageView
		android:id="@+id/imgBtnSideTop"
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:layout_above="@id/bgSwitch"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="-130dp"
		android:src="@drawable/side_switch_top_on" />

	<ImageView
		android:id="@+id/imgBtnSideRight"
		android:layout_width="wrap_content"
		android:layout_height="180dp"
		android:layout_centerVertical="true"
		android:layout_marginLeft="-120dp"
		android:layout_toRightOf="@id/bgSwitch"
		android:src="@drawable/side_switch_right_off" />

	<ImageView
		android:id="@+id/imgBtnSideBottom"
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:layout_below="@id/bgSwitch"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="-130dp"
		android:src="@drawable/side_switch_bottom_off" />

	<ImageView
		android:id="@+id/imgBtnSideLeft"
		android:layout_width="wrap_content"
		android:layout_height="180dp"
		android:layout_centerVertical="true"
		android:layout_marginRight="-120dp"
		android:layout_toLeftOf="@id/bgSwitch"
		android:src="@drawable/side_switch_left_off" />

	<TextView
		android:id="@+id/tvBtnSideTop"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@id/bgSwitch"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="-40dp"
		android:text="15 min"
		android:textAlignment="center"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/tvBtnSideRight"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="-52dp"
		android:layout_toRightOf="@id/bgSwitch"
		android:text="30 min"
		android:textAlignment="center"
		android:textStyle="bold"
		android:rotation="90" />

	<TextView
		android:id="@+id/tvBtnSideBottom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/bgSwitch"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="-40dp"
		android:text="45 min"
		android:textAlignment="center"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/tvBtnSideLeft"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginRight="-46dp"
		android:layout_toLeftOf="@id/bgSwitch"
		android:text="1 hr"
		android:textAlignment="center"
		android:textStyle="bold"
		android:rotation="-90"/>

	<ImageView
		android:id="@+id/imgBtnSwitch"
		android:layout_width="140dp"
		android:layout_height="140dp"
		android:layout_centerInParent="true"
		android:src="@drawable/ic_switch_off" />
</RelativeLayout>
